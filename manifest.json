{
  "manifest_version": 2,
  "name": "What They Say",
  "description": "Generate your own closed captions with zoom",
  "version": "1.5.1",
  "author": "Jackson",
  "short_name": "CC",
  "browser_action": {
    "default_icon": "wts_icon_67.png",
    "default_title": "Closed Captions",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "wts_icon_16.png",
    "48": "wts_icon_48.png",
    "128": "wts_icon_128.png"
  },
  "permissions": 
  ["activeTab",
    "contextMenus",
    "storage"],
  "content_scripts": [{
    "js": ["content.js", "jspdf.js"],
    "matches": ["<all_urls>"],
    "all_frames": true
  }]
}
